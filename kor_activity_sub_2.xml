<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KorActivity_2"
    android:background="#f3871c">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/indLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ind1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_1" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hanok"
                        android:textSize="20dp"
                        android:gravity="center_horizontal"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hanok adalah rumah tradisional yang menggunakan arsitektur tradisional Korea. Juga dikenal sebagai Chosun House. Adalah umum untuk mengamati prinsip Baesan Im, yang merupakan karakteristik Dinasti Joseon tua, idealnya melihat ke belakang dengan gunung-gunung dan menghadap ke air sebagai simbol untuk masa depan "
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/ind2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_2" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Rumah Jerami"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rumah Jerami adalah rumah beratap yang terbuat dari jerami, jerami, dan alang-alang. Terisolasi dengan baik, sejuk di musim panas dan hangat di musim dingin. Namun, mudah membusuk dan datang dengan ketidaknyamanan untuk berubah setiap atau dua tahun. Jerami adalah rumah biasa yang representatif di Korea sampai pertengahan abad kedua puluh."
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/ind3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_3" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Rumah Genteng"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rumah genteng adalah rumah beratap tanah liat. Banyak genteng hitam biasanya terbuat dari tanah liat, tetapi rumah-rumah yang dihuni oleh orang-orang berpangkat tinggi juga memiliki atap dengan glasir biru. Ubinnya cukup mahal, sehingga menyulitkan petani biasa untuk tinggal di atau membeli rumah genteng. Rumah genteng itu benar-benar dibagi menjadi ruang-ruang di mana pria dan wanita hidup karena pengaruh Konfusianisme di Dinasti Joseon."
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_4" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Rumah Ranting"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Itu adalah rumah yang terbuat dari kulit pinus merah di atap. Pada hari-hari cerah, bahan atap menyusut dan berventilasi baik. Pada hari hujan, bahan ini menyerap kelembaban dan mencegah hujan. Sulit untuk melihat sekarang. Awalnya, Hamgyeong-do dikembangkan di desa pegunungan. Ada kekurangan untuk kehangatan rumah melalui celah dengan Anda di musim dingin yang kering."
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_5" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Rumah Kayu"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rumah itu adalah rumah yang terbuat dari batang kayu besar berbentuk bujur sangkar, diisi dengan lantai dan diisi dengan retakan."
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/korLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/ind4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_1" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한옥"
                        android:textSize="20dp"
                        android:gravity="center_horizontal"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한옥(韓屋)은 전통 한국 건축 양식을 사용한 재래식 집을 말한다. (조선집)이라고도 한다. 뒤로는 산을 등지고, 앞으로는 물을 마주하며 남쪽으로 짓는 것을 이상적으로 보는 옛 조선의 특징인 배산임수(背山臨水)의 원칙을 지키는 것이 보통이다.  "
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/ind5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_2" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="초가집"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="초가(草家)는 볏짚·밀짚·갈대 등으로 지붕을 이은 집이다. 단열이 잘 되기 때문에 여름에는 시원하고 겨울에는 따뜻하다. 하지만 썩기 쉬워 한두 해마다 바꿔주어야 하는 불편이 따른다. 초가는 선사 시대 집이 생겼을 때부터 짓기 시작해서 20세기 중반까지 한국의 대표적인 서민 주택이었다."
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/ind6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_3" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="기와집"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="기와집은 기와로 지붕을 만든 집이다. 보통 찰흙으로 만든 검은색 기와를 많이 썼으나, 신분이 높은 사람이 거주하는 집은 푸른 유약을 발라 만든 청기와로 지붕을 이기도 하였다. 기와는 상당히 비쌌기 때문에, 일반 농민들이 기와집을 짓고 살거나 사기에는 상당히 어려웠다. 기와집은 조선시대의 유교의 영향 때문에 남자와 여자가 생활하는 공간이 철저히 구분되어있다"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_4" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="너와집"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="지붕을 붉은 소나무 껍질을 모아 만든 집이다. 맑은 날은 지붕 재료가 수축하여 통풍이 잘되고, 비오는 날은 습기를 빨아들여 빗물이 새는 것을 막는다. 지금은 보기가 힘들어졌다. 원래 함경도 산촌에서 발달한 가옥 형태이다. 건조한 겨울에 너와의 틈새로 집안 온기가 빠져나가는 단점이 있다."
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/kor_house_5" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="귀틀집"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="귀틀집은 큰 통나무를 정(井)자 모양으로 층층에 맞추어 얹고 그 틈을 흙으로 메워 지은 집이다."
                        android:textColor="#FFFFFF" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
